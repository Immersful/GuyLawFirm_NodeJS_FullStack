<% include ../partials/header %>


<div class="container col-10 col-sm-8 col-md-6 col-lg-4 col-xl-3">
        <form id="form-login" class="form-login" method="POST" action="/login">
            <h1 class="h3 mb-4 text-center font-weight-normal">Login</h1>
            <label for="username" class="p-0 m-0">Username:</label>
            <input type="text" name="username" id="username"class="form-control" placeholder="Username" required>
            <label for="password" class="p-0 m-0 mt-3">Password:</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
            <a class="float-right mt-2 mb-2" href="/forgot">Forgot Password?</a>
            <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Login</button>
    </form>
</div>


<% include ../partials/footer %>